@using NiksoftCore.SystemBase.Service;
@using NiksoftCore.Bourse.Service;
@model AdminMediaSearch
@{
    ViewData["Title"] = "مدیریت رسانه ها";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
    var contents = (List<Media>)ViewBag.Contents;
    var pager = (NiksoftCore.Utilities.Pagination)ViewBag.Pager;
    int pageNumber = 0;

    var isSearch = (bool)ViewBag.Search;
    var accSearch = isSearch ? "class='accordion-collapse collapse show'" : "class='accordion-collapse collapse'";
    var accBtn = isSearch ? "aria-expanded='true'" : "";
}
<div class="text-right">
    <a href="#searchAcc" data-toggle="collapse" class="btn btn-outline-info btn-sm" @Html.Raw(accBtn)>
        <i class="fa fa-search"></i>
    </a>
</div>
<div id="searchAcc" @Html.Raw(accSearch) aria-labelledby="headingOne" data-bs-parent="#accordionExample">
    <div class="accordion-body">
        <hr />
        <form method="get">
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="BranchId" class="control-label">شعبه</label>
                        <select class="form-control m-b" asp-for="BranchId" asp-items="ViewBag.Branches">
                            <option selected="selected" value="0">انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="BranchId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="ddlType" class="control-label">وضعیت</label>
                        <select id="ddlType" class="form-control" name="Status">
                            <option value="0">همه</option>
                            <option value="2">درجریان</option>
                            <option value="3">تایید شده</option>
                            <option value="4">مختومه</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="BranchId" class="control-label">نوع رسانه</label>
                        <select class="form-control m-b" asp-for="CategoryId" asp-items="ViewBag.Categories">
                            <option selected="selected" value="0">انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="txtTitle" class="control-label">عنوان</label>
                        @Html.TextBoxFor(m => m.Title, new { placeholder = "عنوان", @class = "form-control", @id = "txtTitle" })
                    </div>
                </div>
                <div class="col-sm-2" style="padding-top: 29px;">
                    <button type="submit" class="btn btn-outline-info">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
        <hr />
    </div>
</div>
<br />
<div class="table-responsive">
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th class="text-primary text-center" width="30px">ردیف</th>
                <th class="text-primary text-center">مشاور بازاریابی</th>
                <th class="text-primary text-center">عنوان</th>
                <th class="text-primary text-center">موضوع</th>
                <th class="text-primary text-center">آدرس اصلی</th>
                <th class="text-primary text-center">آدرس کامل</th>
                <th class="text-primary text-center">وضعیت</th>
                <th class="text-primary text-center">احراز مالکیت</th>
                <th class="text-primary text-center" width="100px">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in contents)
            {
                pageNumber++;
                <tr>
                    <td>@(pager.StartIndex + pageNumber)</td>
                    <td>@item.User.UserProfiles.First().Firstname @item.User.UserProfiles.First().Lastname</td>
                    <td>@item.Title</td>
                    <td>@item.Subject</td>
                    <td>
                        @item.BaseLink
                    </td>
                    <td>@item.FullLink</td>
                    <td>@item.Status.GetMediaStatus()</td>
                    <td>
                        @if (item.Ownership)
                        {
                            <a href="/Panel/AdminBoard/OwnerState/?Id=@item.Id" class="btn btn-outline-success btn-sm">
                               <i class="fas fa-check"></i>
                            </a>
                        }
                        else
                        {
                            <a href="/Panel/AdminBoard/OwnerState/?Id=@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-times"></i>
                            </a>
                        }
                    </td>
                    <td>
                        <div class="btn-group-vertical btn-group-sm">
                            @if (item.Status == MediaStatus.InProccess)
                            {
                                <a href="/Panel/AdminBoard/AcceptMedia/?Id=@item.Id" class="btn btn-outline-success btn-sm">
                                    تایید
                                </a>
                                <a href="/Panel/AdminBoard/IgnoreMedia/?Id=@item.Id" class="btn btn-outline-danger btn-sm">
                                    مختومه
                                </a>
                            }
                            @if (item.Status == MediaStatus.Accept)
                            {
                                <a href="/Panel/AdminBoard/InProgressMedia/?Id=@item.Id" class="btn btn-outline-warning btn-sm">
                                    درجریان
                                </a>
                                <a href="/Panel/AdminBoard/IgnoreMedia/?Id=@item.Id" class="btn btn-outline-danger btn-sm">
                                    مختومه
                                </a>
                            }
                            @if (item.Status == MediaStatus.Ignore)
                            {
                                <a href="/Panel/AdminBoard/AcceptMedia/?Id=@item.Id" class="btn btn-outline-success btn-sm">
                                    تایید
                                </a>
                                <a href="/Panel/AdminBoard/InProgressMedia/?Id=@item.Id" class="btn btn-outline-warning btn-sm">
                                    درجریان
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="pager">
    @if (pager.TotalSize > pager.PageSize)
    {
        <ul class="pagination m-b-5">
            <li class="page-item">
                <a class="page-link" href="@Context.Request.Path?part=1" aria-label="Previous">
                    <i class="fa fa-angle-right"></i>
                </a>
            </li>

            @if (pager.GetStartShow() >= pager.MaxShow)
            {
                <li class="page-item"><a href="@Context.Request.Path?part=@pager.GetBackRang()" class="page-link">...</a></li>
            }

            @for (int i = pager.GetStartShow(); i <= pager.GetEndShow(); i++)
            {
                if (pager.Part == i)
                {
                    <li class="page-item active"><a href="@Context.Request.Path?part=@i" class="page-link">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a href="@Context.Request.Path?part=@i" class="page-link">@i</a></li>
                }

            }

            @if ((pager.TotalParts - pager.MaxShow) > pager.Part)
            {
                <li class="page-item"><a href="@Context.Request.Path?part=@pager.GetEndShow()" class="page-link">...</a></li>
            }
            <li class="page-item">
                <a class="page-link" href="@Context.Request.Path?part=@pager.GetTotalParts()" aria-label="Next">
                    <i class="fa fa-angle-left"></i>
                </a>
            </li>
        </ul>
    }

</div>