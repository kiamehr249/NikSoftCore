@using NiksoftCore.ITCF.Service;
@{
    ViewData["Title"] = "مدیریت محتوای کسب و کار";
    Layout = "~/Areas/Panel/Views/Shared/_FaLayout.cshtml";
    var business = (Business)ViewBag.Company;
}

<h4>@business.CoName</h4>

<div class="row">
    <div class="col-lg-4">
        <div class="card text-center shadow">
            <div class="card-heading">
                <h4 class="card-title text-muted mb-0">محتوای بخش اول</h4>
            </div>
            <div class="card-body p-t-10">
                <p class="text-muted m-b-20 m-t-0">تصویر بزرگ بالای صفحه</p>
                <a href="/Panel/CompanyDataManage/IntroList/?bid=@business.Id&unit=1" class="btn btn-outline-info btn-full">مدیریت محتوا</a>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card text-center shadow">
            <div class="card-heading">
                <h4 class="card-title text-muted mb-0">محتوای بخش دوم</h4>
            </div>
            <div class="card-body p-t-10">
                <p class="text-muted m-b-20 m-t-0">سه تصویر و متن درباره کارخانه</p>
                <a href="/Panel/CompanyDataManage/IntroList/?bid=@business.Id&unit=2" class="btn btn-outline-info btn-full">مدیریت محتوا</a>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card text-center shadow">
            <div class="card-heading">
                <h4 class="card-title text-muted mb-0">محتوای بخش سوم</h4>
            </div>
            <div class="card-body p-t-10">
                <p class="text-muted m-b-20 m-t-0">توضیحات بیشتر</p>
                <a href="/Panel/CompanyDataManage/IntroList/?bid=@business.Id&unit=3" class="btn btn-outline-info btn-full">مدیریت محتوا</a>
            </div>
        </div>
    </div>
</div>