@using NiksoftCore.ITCF.Service;
@model NiksoftCore.ITCF.Service.ProductRequest
@{
    ViewData["Title"] = "ایجاد محصول";
    Layout = "~/Areas/Panel/Views/Shared/_FaLayout.cshtml";
    var Messages = (List<NiksoftCore.ViewModel.NikMessage>)ViewBag.Messages;
    var business = (Business)ViewBag.Company;
}

<h3>@business.CoName</h3>

<div class="text-right">
    <div class="btn-group">
        <a href="/Panel/AdminBusinessManage/Products/?bid=@business.Id" class="btn btn-outline-info btn-sm">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
</div>
<br />
@Html.ValidationSummary()
<form action="/Panel/AdminBusinessManage/CreateProduct" method="post" enctype="multipart/form-data">
    <div class="registerdiv">
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <div class="form-group">
                    <label for="CatgoryId" class="control-label">دسته بندی</label>
                    <select class="form-control m-b" asp-for="CategoryId" asp-items="ViewBag.Categories">
                        <option selected="selected" value="0">انتخاب کنید</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="txtTitle" class="control-label">عنوان فارسی</label>
                    @Html.TextBoxFor(m => m.Title, new { placeholder = "عنوان فارسی", @class = "form-control", @id = "txtTitle" })
                </div>
                <div class="form-group">
                    <label for="txtEnTitle" class="control-label">عنوان انگلیسی</label>
                    @Html.TextBoxFor(m => m.EnTitle, new { placeholder = "عنوان انگلیسی", @class = "form-control", @id = "txtEnTitle" })
                </div>
                <div class="form-group">
                    <label for="txtArTitle" class="control-label">عنوان عربی</label>
                    @Html.TextBoxFor(m => m.ArTitle, new { placeholder = "عنوان عربی", @class = "form-control", @id = "txtArTitle" })
                </div>
                <div class="form-group">
                    <label for="txtPrice" class="control-label">قیمت محصول (ریال)</label>
                    @Html.TextBoxFor(m => m.Price, new { placeholder = "عنوان عربی", @class = "form-control", @id = "txtPrice" })
                </div>
                <div class="form-group">
                    <div class="btn-groupx">
                        <label for="ImageFile" class="btn btn-primary">
                            انتخاب تصویر
                            <input asp-for="ImageFile" type="file" class="d-none" />
                        </label>
                        <label for="VideoFile" class="btn btn-info">
                            انتخاب ویدیو
                            <input asp-for="VideoFile" type="file" class="d-none" />
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtDesc" class="control-label">توضیحات فارسی</label>
                    @Html.TextAreaFor(m => m.Description, new { placeholder = "توضیحات فارسی", @class = "form-control", @id = "txtDesc", rows = "3" })
                </div>
                <div class="form-group">
                    <label for="txtEnDesc" class="control-label">توضیحات انگلیسی</label>
                    @Html.TextAreaFor(m => m.EnDescription, new { placeholder = "توضیحات انگلیسی", @class = "form-control", @id = "txtEnDesc", rows = "3" })
                </div>
                <div class="form-group">
                    <label for="txtArDesc" class="control-label">توضیحات عربی</label>
                    @Html.TextAreaFor(m => m.ArDescription, new { placeholder = "توضیحات عربی", @class = "form-control", @id = "txtArDesc", rows = "3" })
                </div>
                @Html.HiddenFor(m => m.BusinessId)
                @Html.HiddenFor(m => m.BusinessCatId)
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">ذخیره</button>
                </div>
            </div>
        </div>
    </div>
</form>


<script>

    $(document).ready(function () {

        @if (Messages != null)
        {
            @foreach (var item in Messages)
            {
                if (item.Type == NiksoftCore.ViewModel.MessageType.Error)
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'error'
                    });
                    </text>
                }
                else
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'success'
                    });
                    </text>
                }
            }
        }


    });
</script>