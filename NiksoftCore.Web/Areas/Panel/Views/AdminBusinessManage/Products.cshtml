@using NiksoftCore.ITCF.Service;
@{
    ViewData["Title"] = "مدیریت کسب و کار";
    Layout = "~/Areas/Panel/Views/Shared/_FaLayout.cshtml";
    var contents = (List<NiksoftCore.ITCF.Service.Product>)ViewBag.Contents;
    var pager = (NiksoftCore.Utilities.Pagination)ViewBag.Pager;
    int pageNumber = 0;
    var business = (Business)ViewBag.Company;
}

<h4>@business.CoName</h4>

<div class="text-right">
    <div class="btn-group">
        <a href="/Panel/AdminBusinessManage/CreateProduct/?bid=@business.Id" class="btn btn-outline-success btn-sm"><i class="fa fa-plus"></i></a>
        <a href="/Panel/AdminBusinessManage" class="btn btn-outline-info btn-sm">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
</div>

<br />

<div class="table-responsive">
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th class="text-primary text-center" width="30px">ردیف</th>
                <th class="text-primary text-center">عنوان</th>
                <th class="text-primary text-center">تصویر</th>
                <th class="text-primary text-center">ویدیو</th>
                <th class="text-primary text-center">دسته بندی</th>
                <th class="text-primary text-center">توضیحات</th>
                <th class="text-primary text-center">افزودن تصاویر</th>
                <th class="text-primary text-center" width="150px">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in contents)
            {
                pageNumber++;
                <tr>
                    <td>@(pager.StartIndex + pageNumber)</td>
                    <td>@item.Title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="/@item.Image" style="max-height: 80px;" />
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Video))
                        {
                            <a href="/@item.Video" class="btn btn-info btn-sm" target="_blank">نمایش ویدیو</a>
                        }
                    </td>
                    <td>@item.BusinessCategory.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="/Panel/AdminBusinessManage/ProductFiles?Id=@item.Id" class="btn btn-outline-info btn-sm">
                            افزودن تصاویر <span class="badge badge-warning">@item.Files.Count</span>
                        </a>
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="/Panel/AdminBusinessManage/EditProduct?Id=@item.Id" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Panel/AdminBusinessManage/RemoveProduct?Id=@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pager">
        @if (pager.TotalSize > pager.PageSize)
        {
            <ul class="pagination m-b-5">
                <li class="page-item">
                    <a class="page-link" href="@Context.Request.Path?part=1" aria-label="Previous">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </li>

                @for (int i = 1; i <= pager.GetTotalParts(); i++)
                {
                    if (pager.Part == i)
                    {
                        <li class="page-item active"><a href="@Context.Request.Path?part=@i" class="page-link">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a href="@Context.Request.Path?part=@i" class="page-link">@i</a></li>
                    }

                }
                <li class="page-item">
                    <a class="page-link" href="@Context.Request.Path?part=@pager.GetTotalParts()" aria-label="Next">
                        <i class="fa fa-angle-left"></i>
                    </a>
                </li>
            </ul>
        }

    </div>
</div>