@using NiksoftCore.SystemBase.Service;
@using NiksoftCore.Bourse.Service;
@model ContractFeeSearch
@{
    ViewData["Title"] = "نرخ های قرارداد";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
    var contents = (List<ContractFee>)ViewBag.Contents;
    var pager = (NiksoftCore.Utilities.Pagination)ViewBag.Pager;
    int pageNumber = 0;

    var isSearch = (bool)ViewBag.Search;
    var accSearch = isSearch ? "class='accordion-collapse collapse show'" : "class='accordion-collapse collapse'";
    var accBtn = isSearch ? "aria-expanded='true'" : "";
}
<div class="text-right">
    <a href="/Panel/AdLeaderBoard/AddFee/?ContractId=@Model.ContractId" class="btn btn-outline-success btn-sm"><i class="fa fa-plus"></i></a>
    <a href="/Panel/AdLeaderBoard/Contracts/?UserId=@Model.UserId&BranchId=@Model.BranchId" class="btn btn-outline-info btn-sm">
        <i class="fas fa-arrow-left"></i>
    </a>
</div>
<br />
<div class="table-responsive">
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th class="text-primary text-center" width="30px">ردیف</th>
                <th class="text-primary text-center">نوع نرخ</th>
                <th class="text-primary text-center">عنوان</th>
                <th class="text-primary text-center">مبلغ از</th>
                <th class="text-primary text-center">مبلغ تا</th>
                <th class="text-primary text-center">درصد</th>
                <th class="text-primary text-center" width="100px">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in contents)
            {
                pageNumber++;
                <tr>
                    <td>@(pager.StartIndex + pageNumber)</td>
                    <td>
                        @if (item.Fee.FeeType == FeeType.Fixed)
                        {
                            <span>ثابت</span>
                        }
                        else
                        {
                            <span>پلکانی</span>
                        }
                    </td>
                    <td>@item.Fee.Title</td>
                    <td>
                        @item.Fee.FromAmount.ToString("N0")
                    </td>
                    <td>
                        @item.Fee.ToAmount.ToString("N0")
                    </td>
                    <td>@item.Fee.AmountPercentage</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="/Panel/AdLeaderBoard/AddFee/?ContractId=@item.ContractId&Id=@item.Id" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Panel/AdLeaderBoard/RemoveFee/?Id=@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="pager">
    @if (pager.TotalSize > pager.PageSize)
    {
        <ul class="pagination m-b-5">
            <li class="page-item">
                <a class="page-link" href="@Context.Request.Path?part=1" aria-label="Previous">
                    <i class="fa fa-angle-right"></i>
                </a>
            </li>

            @if (pager.GetStartShow() >= pager.MaxShow)
            {
                <li class="page-item"><a href="@Context.Request.Path?part=@pager.GetBackRang()" class="page-link">...</a></li>
            }

            @for (int i = pager.GetStartShow(); i <= pager.GetEndShow(); i++)
            {
                if (pager.Part == i)
                {
                    <li class="page-item active"><a href="@Context.Request.Path?part=@i" class="page-link">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a href="@Context.Request.Path?part=@i" class="page-link">@i</a></li>
                }

            }

            @if ((pager.TotalParts - pager.MaxShow) > pager.Part)
            {
                <li class="page-item"><a href="@Context.Request.Path?part=@pager.GetEndShow()" class="page-link">...</a></li>
            }
            <li class="page-item">
                <a class="page-link" href="@Context.Request.Path?part=@pager.GetTotalParts()" aria-label="Next">
                    <i class="fa fa-angle-left"></i>
                </a>
            </li>
        </ul>
    }

</div>