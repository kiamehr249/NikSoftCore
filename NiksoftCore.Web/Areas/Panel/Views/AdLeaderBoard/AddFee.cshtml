@using NiksoftCore.Bourse.Service;
@model ContractFeeRequest
@{
    ViewData["Title"] = "افزود نرخ به قرارداد";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
    var Messages = (List<NiksoftCore.ViewModel.NikMessage>)ViewBag.Messages;
}
<div class="text-right">
    <div class="btn-group">
        <a href="/Panel/AdLeaderBoard/ContractFees/?ContractId=@Model.ContractId" class="btn btn-outline-info btn-sm">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
</div>
<br />
@Html.ValidationSummary()
<form action="/Panel/AdLeaderBoard/AddFee" method="post">
    <div class="registerdiv">
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <div class="form-group">
                    <label for="FeeType" class="control-label">نوع کارمزد</label>
                    <select class="form-control m-b" asp-for="FeeType" asp-items="ViewBag.FeeTypes">
                        <option selected="selected" value="0">انتخاب کنید</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="ddlFee" class="control-label">کارمزد</label>
                    <select id="ddlFee" class="form-control m-b" name="FeeId">
                    </select>
                </div>
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.ContractId)
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">ذخیره</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    var ddls = {
        feeId: @Model.FeeId,
        feeType: @Model.FeeType
    }

    $(document).ready(function () {
        $('#FeeType').on('change', function () {
            getFees(this.value);
        });

        if (ddls.feeType > 0) {
            getFees(ddls.feeType);
        }


        @if (Messages != null)
        {
            @foreach (var item in Messages)
            {
                if (item.Type == NiksoftCore.ViewModel.MessageType.Error)
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'error'
                    });
                    </text>
                }
                else
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'success'
                    });
                    </text>
                }
            }
        }


    });


    function ddlBinder(tp) {
        $.post('/api/BourseApi/GetFees', { type: tp }, function (data) {
            createOptions(data.data, feeId,'#ddlFee');
        });
    }

    function getFees(tp) {
        callApi({
            url: '/api/BourseApi/GetFees',
            data: { type: tp },
            success: function (response) {
                if (response.status == 200) {
                    dropdownBinder({
                        ddl: '#ddlFee',
                        data: response.data
                    });

                    if (ddls.feeType > 0) {
                        setItemDropdown({
                            ddl: '#ddlFee',
                            value: ddls.feeId
                        });
                    }
                }
            }
        });
    }
</script>