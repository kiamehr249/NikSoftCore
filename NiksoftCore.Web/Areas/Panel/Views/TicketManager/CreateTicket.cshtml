@using NiksoftCore.Bourse.Service;
@model TicketRequest
@{
    ViewData["Title"] = "ایجاد تیکت";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
    var Messages = (List<NiksoftCore.ViewModel.NikMessage>)ViewBag.Messages;
}
<div class="text-right">
    <div class="btn-group">
        <a href="/Panel/TicketManager/MyTickets" class="btn btn-outline-info btn-sm">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
</div>
<br />
@Html.ValidationSummary()
<form action="/Panel/TicketManager/CreateTicket" method="post">
    <div class="registerdiv">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="txtTitle" class="control-label">عنوان</label>
                    @Html.TextBoxFor(m => m.Title, new { placeholder = "عنوان", @class = "form-control", @id = "txtTitle" })
                    @Html.ValidationMessageFor(m => m.Title)
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label for="CategoryId" class="control-label">دسته بندی</label>
                    <select class="form-control m-b" asp-for="CategoryId" asp-items="ViewBag.Categories">
                        <option selected="selected" value="0">انتخاب کنید</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label for="PriorityId" class="control-label">اولویت</label>
                    <select class="form-control m-b" asp-for="PriorityId" asp-items="ViewBag.Priorities">
                        <option selected="selected" value="0">انتخاب کنید</option>
                    </select>
                    <span asp-validation-for="PriorityId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label for="txtFullText" class="control-label">متن اصلی</label>
                    @Html.TextAreaFor(m => m.FullText, new { @class = "form-control text-editor", @id = "txtFullText", rows = "3" })
                </div>
                @Html.HiddenFor(m => m.Id)
            </div>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-success">ذخیره</button>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {

        @if (Messages != null)
        {
            @foreach (var item in Messages)
            {
                if (item.Type == NiksoftCore.ViewModel.MessageType.Error)
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'error'
                    });
                    </text>
                }
                else
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'success'
                    });
                    </text>
                }
            }
        }
    });
</script>