@using NiksoftCore.Bourse.Service;
@model IcoCaseRequest
@{
    ViewData["Title"] = "Create Form";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
    var Messages = (List<NiksoftCore.ViewModel.NikMessage>)ViewBag.Messages;
}
<div class="text-right">
    <div class="btn-group">
        <a href="/Panel/IcoCaseManage" class="btn btn-outline-info btn-sm">
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>
<br />
@Html.ValidationSummary()
<form id="baseform" action="/Panel/IcoCaseManage/Create" method="post" enctype="multipart/form-data">
    <div class="registerdiv">
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <div class="form-group">
                    <label for="txtTitle" class="control-label">Title</label>
                    @Html.TextBoxFor(m => m.Title, new { placeholder = "Title", @class = "form-control", @id = "txtTitle" })
                </div>
                <div class="form-group">
                    <label for="txtCollected" class="control-label">Collected</label>
                    @Html.TextBoxFor(m => m.Collected, new { placeholder = "0$", @class = "form-control", @id = "txtCollected" })
                </div>
                <div class="form-group">
                    <label for="txtStartDate">Start Date</label>
                    @Html.TextBoxFor(m => m.StartDate, new { placeholder = "mm/dd/yyyy", @class = "form-control datepicker", @id = "txtStartDate" })
                </div>
                <div class="form-group">
                    <label for="txtParticipants" class="control-label">Participants</label>
                    @Html.TextBoxFor(m => m.Participants, new { placeholder = "0", @class = "form-control", @id = "txtParticipants" })
                </div>
                <div class="form-group">
                    <label for="IconFile" class="btn btn-warning">
                        select slider image
                        <input asp-for="IconFile" type="file" class="d-none" />
                    </label>
                    @if (!string.IsNullOrEmpty(Model.Icon))
                    {
                        <img src="/@Model.Icon" style="max-height: 60px;" />
                    }
                </div>
                <div class="form-group">
                    <label for="ImageFile" class="btn btn-warning">
                        select archive image
                        <input asp-for="ImageFile" type="file" class="d-none" />
                    </label>
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="/@Model.Image" style="max-height: 60px;" />
                    }
                </div>
                <div class="form-group">
                    <label for="txtFullText" class="control-label">Text</label>
                    @Html.TextAreaFor(m => m.FullText, new { placeholder = "Description", @class = "form-control text-editor", @id = "txtFullText", rows = "3" })
                </div>
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.ListObjects, new { @id = "listobject" })
                <div class="form-group text-center">
                    <button id="submitform" type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>


<script>

    $(document).ready(function () {

        @if (Messages != null)
        {
            @foreach (var item in Messages)
            {
                if (item.Type == NiksoftCore.ViewModel.MessageType.Error)
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'error'
                    });
                    </text>
                }
                else
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'success'
                    });
                    </text>
                }
            }
        }

    });
</script>