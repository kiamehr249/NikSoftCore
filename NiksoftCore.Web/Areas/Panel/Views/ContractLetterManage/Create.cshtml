@using NiksoftCore.Bourse.Service;
@model ContractLetterRequest
@{
    ViewData["Title"] = "ایجاد متن قرارداد";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
    var Messages = (List<NiksoftCore.ViewModel.NikMessage>)ViewBag.Messages;
}
<div class="text-right">
    <div class="btn-group">
        <a href="/Panel/ContractLetterManage" class="btn btn-outline-info btn-sm">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
</div>
<br />
@Html.ValidationSummary()
<form action="/Panel/ContractLetterManage/Create" method="post">
    <div class="registerdiv">
        <div class="row">
            <div class="col-sm-10 offset-sm-1">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtTitle" class="control-label">عنوان</label>
                            @Html.TextBoxFor(m => m.Title, new { placeholder = "عنوان", @class = "form-control", @id = "txtTitle" })
                            @Html.ValidationMessageFor(m => m.Title)
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="ContractType" class="control-label">نوع قرارداد</label>
                            <select class="form-control m-b" asp-for="ContractType" asp-items="ViewBag.ContractTypes">
                                <option selected="selected" value="0">انتخاب کنید</option>
                            </select>
                            @Html.ValidationMessageFor(m => m.ContractType)
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="ContractType" class="control-label">سال قرارداد</label>
                            <select class="form-control m-b" asp-for="Year" asp-items="ViewBag.Years">
                                <option selected="selected" value="0">انتخاب کنید</option>
                            </select>
                            @Html.ValidationMessageFor(m => m.Year)
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="txtCurrentDate" class="control-label">تاریخ متن</label>
                            @Html.TextBoxFor(m => m.CurrentDate, new { @class = "form-control datepicker", @id = "txtCurrentDate" })
                            @Html.ValidationMessageFor(m => m.CurrentDate)
                        </div>
                    </div>
                </div>
           
                <div class="form-group">
                    <label for="txtBodyText" class="control-label">متن قرارداد</label>
                    @Html.TextAreaFor(m => m.FullText, new { @class = "form-control text-editor", @id = "txtBodyText", rows = "8" })
                    @Html.ValidationMessageFor(m => m.FullText)
                </div>
                @Html.HiddenFor(m => m.Id)
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">ذخیره</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {

        @if (Messages != null)
        {
            @foreach (var item in Messages)
            {
                if (item.Type == NiksoftCore.ViewModel.MessageType.Error)
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'error'
                    });
                    </text>
                }
                else
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'success'
                    });
                    </text>
                }
            }
        }
    });
</script>