<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="گروه نرم افزاری نیک" name="description" />
    <meta content="نیک نرم افزار" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>@ViewBag.Title</title>

    <link rel="shortcut icon" href="~/templates/dashboard/NikFace/images/favicon.png">
    <link rel="stylesheet" href="~/templates/dashboard/NikFace/plugins/morris/morris.css">
    <link href="~/templates/dashboard/NikFace/css/rtl/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/noty/noty.css" rel="stylesheet">
    <link href="~/lib/noty/themes/sunset.css" rel="stylesheet">
    <link href="~/templates/dashboard/NikFace/plugins/fontawesome/css/fontawesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/templates/dashboard/NikFace/plugins/fontawesome/css/brands.css" rel="stylesheet" type="text/css">
    <link href="~/templates/dashboard/NikFace/plugins/fontawesome/css/solid.css" rel="stylesheet" type="text/css">
    <link href="~/templates/dashboard/NikFace/plugins/fontawesome/css/regular.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/datepicker/persian-datepicker.css" rel="stylesheet" type="text/css">
    <link href="~/templates/dashboard/NikFace/css/style.css" rel="stylesheet" type="text/css">
</head>
<body class="rtl-body fixed-left">
    <script src="~/templates/dashboard/NikFace/js/jquery.min.js"></script>
    <script src="~/lib/datepicker/persian-datepicker.js"></script>
    <script src="~/lib/noty/noty.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/js/BaseSystem.js"></script>
    <div id="wrapper">
        <div class="topbar">
            <div class="topbar-right">
                <div class="text-center">
                    <a href="/Panel" class="logo"><img src="~/templates/dashboard/NikFace/images/logo.png" alt="logo-img"></a>
                    <a href="/Panel" class="logo-sm"><img src="~/templates/dashboard/NikFace/images/logo_sm.png" alt="logo-img"></a>
                </div>
            </div>
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <ul class="list-inline menu-left mb-0">
                        <li class="float-left">
                            <button class="button-menu-mobile open-left waves-light waves-effect">
                                <i class="fas fa-bars" style="vertical-align: middle;"></i>
                            </button>
                        </li>
                        <li class="hide-phone app-search float-left d-none">
                            <form role="search" class="navbar-form">
                                <input type="text" placeholder="جستجو..." class="form-control search-bar">
                                <a href="#" class="btn-search"><i class="fa fa-search"></i></a>
                            </form>
                        </li>
                    </ul>

                    @await Component.InvokeAsync("WUserInfo")
                </div>
            </nav>
        </div>

        <div class="right side-menu">
            <div class="sidebar-inner slimscrollleft">
                <div id="sidebar-menu">
                    <ul>
                        <li>
                            <a href="/Panel" class="waves-effect"><i class="mdi mdi-home"></i><span> داشبورد </span></a>
                        </li>
                    </ul>
                    @await Component.InvokeAsync("WPanelMenu")
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="content-page">
            <div class="content">

                <div class="">
                    <div class="page-header-title">
                        <h4 class="page-title">@ViewBag.PageTitle</h4>
                    </div>
                </div>

                <div class="page-content-wrapper ">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </div>
            </div>

            <footer class="footer">
                © 2016 - 2018 تمامی حقوق اثر متعلق به گروه نرم افزاری نیک می باشد.
            </footer>

        </div>
    </div>

    <script src="~/templates/dashboard/NikFace/js/popper.min.js"></script>
    <script src="~/templates/dashboard/NikFace/js/bootstrap.min.js"></script>
    <script src="~/templates/dashboard/NikFace/js/modernizr.min.js"></script>
    <script src="~/templates/dashboard/NikFace/js/detect.js"></script>
    <script src="~/templates/dashboard/NikFace/js/fastclick.js"></script>
    <script src="~/templates/dashboard/NikFace/js/jquery.slimscroll.js"></script>
    <script src="~/templates/dashboard/NikFace/js/jquery.blockUI.js"></script>
    <script src="~/templates/dashboard/NikFace/js/waves.js"></script>
    <script src="~/templates/dashboard/NikFace/js/wow.min.js"></script>
    <script src="~/templates/dashboard/NikFace/js/jquery.nicescroll.js"></script>
    <script src="~/templates/dashboard/NikFace/js/jquery.scrollTo.min.js"></script>
    <script src="~/templates/dashboard/NikFace/plugins/morris/morris.min.js"></script>
    <script src="~/templates/dashboard/NikFace/plugins/raphael/raphael-min.js"></script>
    @*<script src="~/templates/dashboard/NikFace/pages/dashborad.js"></script>*@
    <script src="~/templates/dashboard/NikFace/js/app.js"></script>
    <script src="~/js/panel-configs.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
