@{
    ViewData["Title"] = "Swiss Trader Dashboard";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Dashboard
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box box-solid bg-dark">
        <div class="box-header with-border">
            <h3 class="box-title">Wallet Management</h3>
            <h6 class="box-subtitle">You can insert Bit Coin Wallet</h6>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>
        </div>
        <div class="box-body wizard-content">
            <form action="post" class="tab-wizard vertical wizard-circle">
                <!-- Step 1 -->
                <h6>Wallet Info</h6>
                <section class="bg-hexagons-dark">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstName1">Wallet Code :</label>
                                <input type="text" class="form-control" id="Wallet Code">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </div>
    </div>
</section>