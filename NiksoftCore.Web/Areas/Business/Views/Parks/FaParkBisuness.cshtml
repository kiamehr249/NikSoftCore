@using NiksoftCore.ITCF.Service
@model NiksoftCore.ITCF.Service.BusinessSearchRequest
@{
    ViewData["Title"] = "شهرک های صنعتی";
    Layout = "~/Areas/Business/Views/Shared/_FaLayout.cshtml";
    var Messages = (List<NiksoftCore.ViewModel.NikMessage>)ViewBag.Messages;
    var pager = (NiksoftCore.Utilities.Pagination)ViewBag.Pager;
    var Contents = (List<Business>)ViewBag.Contents;
}

<div class="content-wrapper">
    <section class="hero-section">
        <h2 class="hidden">Slider Section</h2>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="section-header">
                        <h3>@ViewBag.PageTitle</h3>
                        <span><i></i></span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br />
    <br />
    <div class="container">
        <div class="blog-posts-list">
            <form class="respond-form" method="get">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.CoName, new { @class = "form-control", @placeholder = "عنوان" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="text-right">
                            @Html.HiddenFor(m => m.ParkId)
                            <button class="form-send btn yellow dark-hover" type="submit">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row">
                @if (Contents.Count == 0)
                {
                    <div class="col-sm-12">
                        <div class="section-header">
                            <h5 class="subtitle">متاسفانه</h5>
                            <h4>هیچ کسب و کاری در اینجا پیدا نشد</h4>
                            <span><i></i></span>
                        </div>
                    </div>
                }
                @foreach (var item in Contents)
                {
                    <div class="col-sm-3">
                        <div class="blog-post">
                            <h5 class="post-title"><a href="/">@item.CoName</a></h5>
                            <ul class="post-meta clean-list">
                                <li><a href="#">@item.Province.Title</a></li>
                                <li><a href="#">@item.City.Title</a></li>
                            </ul>
                        </div>
                    </div>
                }

            </div>

            @if (pager.TotalSize > pager.PageSize)
            {
                <ul class="page-numbers">

                    <li><a class="prev page-numbers" href="@Context.Request.Path?part=1">نخست</a></li>
                    @for (int i = 1; i <= pager.GetTotalParts(); i++)
                    {
                        if (pager.Part == i)
                        {
                            <li><span class="page-numbers current">@i</span></li>
                        }
                        else
                        {
                            <li><a class="page-numbers" href="@Context.Request.Path?part=@i">@i</a></li>
                        }

                    }
                    <li><a class="next page-numbers" href="@Context.Request.Path?part=@pager.GetTotalParts()">آخر</a></li>
                </ul>
            }
        </div>
    </div>
</div>
